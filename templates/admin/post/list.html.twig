{% block body %}
    <h1>Liste des Posts</h1>

    <a href="{{ path('post_create') }}">Créer un nouveau post</a>

    <div class="pagination">
        <ul>
            {% for post in pagination.items %}
                <li>
                    <h3>{{ post.title }}</h3>

                    {# Vérification si une image existe pour le post #}
                    {% if post.imageName %}
                        <img src="{{ asset('uploads/images/' ~ post.imageName) }}" alt="Image du post" width="100" height="100">
                    {% else %}
                        <p>Aucune image disponible</p>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>

        <div class="pagination_links">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
